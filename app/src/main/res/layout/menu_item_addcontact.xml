<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_linearlayout_popup"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Contact"
            android:background="?attr/colorSecondary"
            android:textSize="18sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:textColor="?attr/colorOnSecondary"/>

        <ImageButton
            android:id="@+id/addPerson"
            android:layout_margin="15dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:padding="0dp"
            android:src="@drawable/person_contact"
            android:contentDescription="add persona imagen"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/addCompany"
            android:layout_margin="15dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="0dp"
            android:background="?attr/colorSurface"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:contentDescription="add company imagen"
            android:src="@drawable/company_contact"
            />
    </LinearLayout>

</RelativeLayout>
