<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.contact_details.ContactDetails"
    android:orientation="vertical"
    android:background="@color/Secondary">

    <LinearLayout
        android:id="@+id/idHeaderDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/on_Primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/idScrollViewDetailContact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/idDetailContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Detail"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/idScrollViewDetailContact"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/idHeaderDetail"
        app:layout_constraintBottom_toTopOf="@+id/idFooterDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:contentDescription="imagen contact"
            android:padding="15dp"
            android:background="@color/Secondary"
            />
        <LinearLayout
            android:id="@+id/idNamesContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@color/separete_bloc"
            >
            <TextView
                android:id="@+id/idNameDetailContatc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:padding="7dp"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"/>
            <TextView
                android:id="@+id/idLastNameDetailContatc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last name: "
                android:padding="7dp"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/idFooterDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/on_Primary"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/idScrollViewDetailContact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/idBtnCloseDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:onClick="closeDetail"
            android:backgroundTint="@color/cancelar"
            android:text="Close" />

        <Button
            android:id="@+id/idDetailEditContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:onClick="editContact"
            android:backgroundTint="@color/add"
            android:text="Edit" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>