<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.contact_details.CompanyDetails">

    <LinearLayout
        android:id="@+id/idHeaderDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/on_Primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/idScrollViewDetailContact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/idDetailContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Detail"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/idScrollViewDetailContact"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/idHeaderDetail"
        app:layout_constraintBottom_toTopOf="@+id/idFooterDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/idLinearContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/idNameCompanyContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@color/separete_bloc"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        android:layout_weight="1"
                        android:padding="7dp"
                        android:textSize="16sp"
                        android:textColor="@color/textColorPrimary"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/idNameDetailContatc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="7dp"
                        android:textSize="16sp"
                        android:textColor="@color/textColorPrimary"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Description: "
                        android:padding="7dp"
                        android:textSize="16sp"
                        android:textColor="@color/textColorPrimary"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/idDescriptionDetailContatc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="7dp"
                        android:textSize="16sp"
                        android:textColor="@color/textColorPrimary"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Residency: "
                        android:layout_weight="2"
                        android:padding="7dp"
                        android:textSize="16sp"
                        android:textColor="@color/textColorPrimary"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/idResidencyDetailContatc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="7dp"
                        android:textSize="16sp"
                        android:textColor="@color/textColorPrimary"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idTelephoneCompanyContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@color/separete_bloc"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Telephone"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Label"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>
                <!-- Telephones company -->
                <LinearLayout
                    android:id="@+id/telephonesCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <!-- Adress Person -->

            <LinearLayout
                android:id="@+id/idAdressCompanyContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@color/separete_bloc"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Adress"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Label"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Adresses company -->
                <LinearLayout
                    android:id="@+id/adressesCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <!-- Email company -->
            <LinearLayout
                android:id="@+id/idEmailContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@color/separete_bloc"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Label"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Emails Company -->
                <LinearLayout
                    android:id="@+id/EmailsCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <!-- EventDate company -->
            <LinearLayout
                android:id="@+id/idEventDateContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@color/separete_bloc"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Event Date"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Label"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Emails Company -->
                <LinearLayout
                    android:id="@+id/EventDateCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>


            <!-- Associate Contact company -->
            <LinearLayout
                android:id="@+id/idAssociateContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@color/separete_bloc"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Associate Contact"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Telephone"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Associate Company -->
                <LinearLayout
                    android:id="@+id/AssociateCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <!-- Social Media Contact company -->
            <LinearLayout
                android:id="@+id/idSocialMediaContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@color/separete_bloc"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Social Media"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="User"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Social Media Company -->
                <LinearLayout
                    android:id="@+id/SocialMediaCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/idFooterDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/on_Primary"
        android:orientation="horizontal"
        android:padding="5dp"


        app:layout_constraintTop_toBottomOf="@+id/idScrollViewDetailContact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/idBtnCloseDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:onClick="closeDetail"
            android:backgroundTint="@color/cancelar"
            android:text="Close" />

        <Button
            android:id="@+id/idDetailEditContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:onClick="editContact"
            android:backgroundTint="@color/add"
            android:text="Edit" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>