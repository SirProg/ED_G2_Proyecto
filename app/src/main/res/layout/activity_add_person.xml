<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".modules.add_person.view.AddPersonActivity">

    <LinearLayout
        android:id="@+id/headerAddContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="?attr/colorOnPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Contacto"
            android:textColor="?attr/colorPrimaryContainer"
            android:textSize="18sp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/headerAddContact"
        app:layout_constraintBottom_toTopOf="@+id/inferior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/colorSecondary"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/colorOnPrimary"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/textViewPersona"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Persona"
                    android:textSize="22dp"
                    android:textColor="?attr/colorSurface"
                    android:textAlignment="center"
                    android:textStyle="bold"/>


            </LinearLayout>

            <EditText
                android:id="@+id/nameid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:textColor="?attr/colorSurfaceVariant"/>

            <EditText
                android:id="@+id/lastNameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellido"
                android:textColor="?attr/colorSurfaceVariant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Teléfono:"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorSurfaceVariant"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorTelefonos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                >


                <Button
                    android:id="@+id/buttonAgregarTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Añadir número de teléfono"
                    android:textColor="?attr/colorPrimaryContainer"
                    android:backgroundTint="?attr/colorOnTertiary"/>
            </LinearLayout>

            <EditText
                android:id="@+id/residenciaID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pais de residencia" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E-mail:"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorSurfaceVariant"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorCorreos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <Button
                    android:id="@+id/buttonAgregarEmail"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="+ Añadir E-mail"
                    android:textColor="?attr/colorPrimaryContainer"
                    android:backgroundTint="?attr/colorOnTertiary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dirección:"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorSurfaceVariant"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">


                <Button
                    android:id="@+id/buttonAgregarDireccion"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="+ Añadir Direccion"
                    android:textColor="?attr/colorPrimaryContainer"
                    android:backgroundTint="?attr/colorOnTertiary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/textAsociado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contactos asociados:"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorSurfaceVariant"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorAsociados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">


                <Button
                    android:id="@+id/buttonAgregarAsociados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:backgroundTint="?attr/colorOnTertiary"
                    android:text="Añadir contacto asociado"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fechas:"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorSurfaceVariant"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">


                <Button
                    android:id="@+id/buttonAgregarFecha"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Añadir Fecha"
                    android:textColor="?attr/colorPrimaryContainer"
                    android:backgroundTint="?attr/colorOnTertiary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Red Social:"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorSurfaceVariant"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedorRedSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">


                <Button
                    android:id="@+id/buttonAgregarRedSocial"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Añadir Red Social"
                    android:textColor="?attr/colorPrimaryContainer"
                    android:backgroundTint="?attr/colorOnTertiary" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorOnPrimary"
        android:padding="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/cancelarC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="?attr/colorOnError"
            android:text="@string/close"
            android:textColor="?attr/colorSurface"
            android:textStyle="bold"
            android:layout_marginEnd="5dp" />

        <Button
            android:id="@+id/guardarC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="?attr/colorTertiary"
            android:text="@string/add"
            android:textColor="?attr/colorSurface"
            android:textStyle="bold"
            android:layout_marginEnd="5dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
